<mvc:View xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" controllerName="gruppo1.gruppo1.controller.Home">
  <Page title="{i18n>home.title}" >
    <content>
      <FlexBox wrap="Wrap" class="sapUiResponsiveMargin" alignContent="Center"  alignItems="Center" justifyContent="Center">
        <GenericTile class="sapUiSmallMargin" imageDescription="sap-icon://group" header="{i18n>suppliersGenericTile.header}" press="navTo('worklist')">
          <TileContent >
            <core:Icon src="sap-icon://group" height="100%" width="100%" size="75px"/>
          </TileContent>
        </GenericTile>
        <GenericTile class="sapUiSmallMargin" imageDescription="sap-icon://bar-code" header="{i18n>verifyGenericTile.header}" press="navTo('verificaCliente')">
          <TileContent >
            <core:Icon src="sap-icon://bar-code" height="100%" width="100%" size="75px"/>
          </TileContent>
        </GenericTile>
        <GenericTile class="sapUiSmallMargin" imageDescription="sap-icon://customer-and-contacts" header="{i18n>customerAlertGenericTile.header}" press="navTo('avvertiCliente')">
          <TileContent >
            <core:Icon src="sap-icon://customer-and-contacts" height="100%" width="100%" size="75px"/>
          </TileContent>
        </GenericTile>
        <GenericTile class="sapUiSmallMargin" imageDescription="sap-icon://offsite-work" header="{i18n>clientiEsterniGenericTile.header}" press="navTo('clientiEsterni')">
          <TileContent >
            <core:Icon src="sap-icon://offsite-work" height="100%" width="100%" size="75px"/>
          </TileContent>
        </GenericTile>
      </FlexBox>
    </content>
  </Page>
</mvc:View>